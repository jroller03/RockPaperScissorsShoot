<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Rock Paper Scissors</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <script src="~/js/jquery-3.3.1.js"></script>
  </head>
  <body>
    <h1>Rock Paper Scissors</h1>
    <form action='/submit' method="post">
      <div class='form-group'>
        <label for='player-one-answer'>Player One</label>
        <select id='player-one-answer' name='player-one-answer' class='form-control'>
          <option value="rock">Rock</option>
          <option value="paper">Paper</option>
          <option value="scissors">Scissors</option>
        </select>
      </div>
      <div class='form-group'>
        <label for='player-two-answer'>Player Two</label>
        <select id='player-two-answer' name='player-two-answer' class='form-control'>
          <option value="rock">Rock</option>
          <option value="paper">Paper</option>
          <option value="scissors">Scissors</option>
        </select>
      </div>
      <button type='submit' class='btn btn-primary'>Play!</button>
    </form>

    <div class="results">
      @if (@Model != null)
      {
        @Model.GetWinStatement();
      }

    </div>

  </body>
</html>
